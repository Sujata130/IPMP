#include<stdio.h>
int main(){
	int m = 4;
	int n = 2*m -1;
	printf("enter the no. of rows\n");
	scanf("%d",&m);
	int x=n-1;//x=space
	int stars=1;
	for (int i = 1 ; i<=n; i++){
		for (int j =1;j<=x;j++)
		{printf(" ");}
		for(int k=1;k<=stars;k++)
		{
			printf("*");}
			if (x>i){
				x=x-1;
				stars=stars+2;
			}
			if(x < i){
				x=x+1;
				stars=stars-2;}
		printf("\n");
			}
return 0;}
